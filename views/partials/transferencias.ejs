<div class="container">
    <div class="row" id="transferencias">
        <div class="col-12 d-flex justify-content-center">
            <h2>Transferencias entre cuentas propias</h2>
        </div>
        <div class="row">
            <form id="transferenciasForm" action="/transferencias" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="cuentaOrigenForm">Cuenta de origen </label>
                    <select class="form-select" name="cuentaOrigen" id="cuentaOrigenForm">
                        <option value="" disabled selected hidden>Elegir cuenta</option>
                        <% cuentas.forEach(cuenta => { %>
                            <option value="<%= cuenta.cuenta_id %>"><%= cuenta.cuenta_nombre %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="cuentaDestinoForm">Cuenta de destino </label>
                    <select class="form-select" name="cuentaDestino" id="cuentaDestinoForm">
                        <option value="" disabled selected hidden>Elegir cuenta</option>
                        <% cuentas.forEach(cuenta => { %>
                            <option value="<%= cuenta.cuenta_id %>"><%= cuenta.cuenta_nombre %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="montoFormTransferencias">Monto </label>
                    <input class="form-control" type="number" step="0.01" name="monto" id="montoFormTransferencias">
                </div>
                <div class="mb-3" hidden>
                    <label for="categoriaForm" class="form-label">Categoria</label>
                    <input type="text" class="form-control" id="categoriaForm" name="categoriaTransferencias" value="Transferencia entre cuentas propias" disabled>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="fechaFormTransferencias">Fecha </label>
                    <input class="form-control" type="date" name="fecha" id="fechaFormTransferencias">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="observacionFormTransferencias">Observacion </label>
                    <input class="form-control" type="text" name="observacion" id="observacionFormTransferencias">
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <input class="form-control" type="number" name="id_usuario" value="<%= currentUser %>" disabled hidden>
                    <input class="btn btn-outline-success" type="submit">
                </div>
            </form>
        </div>
    </div>
</div>